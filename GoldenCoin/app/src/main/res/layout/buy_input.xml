<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95D8F0"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_layout1"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="#95D8F0"
        android:orientation="horizontal"
        android:paddingBottom="5sp"
        android:paddingTop="5dp" >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="backToDetail"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <View
            android:id="@+id/view15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/your_crypto"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:background="#95D8F0"
            android:gravity="center"
            android:text="Your BTC:"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cur_crypto"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_below="@+id/your_crypto"
            android:layout_marginLeft="50dp"
            android:background="#95D8F0"
            android:gravity="center"
            android:text="BTC"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/your_amount"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_below="@+id/your_crypto"
            android:layout_toEndOf="@+id/cur_crypto"
            android:background="#95D8F0"
            android:gravity="center_vertical"
            android:text="0.0000"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/cur_crypto" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="25dp"
            android:background="#95D8F0"
            android:gravity="center"
            android:text="USD"
            android:textColor="#ffffff"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/your_amount_usd_value"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/textView18"
            android:background="#95D8F0"
            android:gravity="center_vertical"
            android:text="0.00"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <TextView
            android:id="@+id/textView20"
            android:layout_width="100dp"
            android:layout_height="53dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:background="#95D8F0"
            android:gravity="center"
            android:text="Your USD:"
            android:textColor="#ffffff"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/textView23"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="25dp"
            android:background="#95D8F0"
            android:gravity="center"
            android:text="USD"
            android:textColor="#ffffff"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/remaining_usd"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/textView23"
            android:background="#95D8F0"
            android:gravity="center_vertical"
            android:text="0.00"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view17"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />



    <View
        android:id="@+id/view19"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <TextView
            android:id="@+id/buy_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_buy"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/edit_buy"
            android:text="How many do you want to buy?" />

        <EditText
            android:id="@+id/edit_buy"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="#ffffff"
            android:digits="0123456789."
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#cccccc">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/buy_button"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_buy"
            android:layout_centerHorizontal="true"
            android:background="#1C86EE"
            android:text="BUY"
            android:onClick="buyCoin"/>

    </RelativeLayout>

</LinearLayout>