<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutoDeposit"
    android:orientation="vertical"
    android:background="#95D8F0">

    <android.support.v7.widget.Toolbar
        android:id="@+id/auto_deposit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBarBackground"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/colorBarTitle" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="  Auto Transfer to Golden Coin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <CheckBox
                android:id="@+id/toCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="  Auto Transfer to Bank"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <CheckBox
                android:id="@+id/toBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>